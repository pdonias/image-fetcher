{
  "name": "file-fetcher",
  "description": "Recurrent file fetching tool",
  "homepage": "https://pdonias.github.io/file-fetcher",
  "repository": {
    "type": "git",
    "url": "https://github.com/pdonias/file-fetcher"
  },
  "author": "Pierre Donias <pierre.donias@gmail.com>",
  "version": "0.7.2",
  "license": "AGPL-3.0",
  "preferGlobal": true,
  "keywords": [
    "file",
    "fetch",
    "fetching",
    "recurrent",
    "cron",
    "download"
  ],
  "main": "dist/",
  "files": [
    "dist/"
  ],
  "bin": {
    "file-fetcher": "dist/index.js"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "cron": "^1.1.1",
    "digits": "^0.2.0",
    "download": "^5.0.2",
    "expand-tilde": "^2.0.2",
    "is-my-json-valid": "^2.15.0",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "moment": "^2.18.1",
    "to-absolute-glob": "^2.0.1",
    "yargs": "^6.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.2.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.2.2",
    "babel-preset-stage-3": "^6.22.0",
    "cross-env": "^3.2.4",
    "dependency-check": "^2.8.0",
    "standard": "^9.0.2"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production babel --source-maps --out-dir=dist/ src/",
    "clean": "rimraf dist/",
    "depcheck": "dependency-check ./package.json",
    "dev": "cross-env NODE_ENV=development babel --watch --source-maps --out-dir=dist/ src/",
    "lint": "standard",
    "posttest": "npm run lint && npm run depcheck",
    "prebuild": "npm run clean",
    "predev": "npm run clean",
    "prepublish": "npm run build",
    "start": "node dist/index.js",
    "test": "echo \"No tests yet\""
  },
  "engines": {
    "node": ">=4"
  },
  "babel": {
    "plugins": [
      "transform-runtime"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          }
        }
      ],
      "stage-3"
    ]
  },
  "standard": {
    "ignore": [
      "dist"
    ],
    "parser": "babel-eslint"
  }
}
